<h2 class="navbar">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {
  data: { turbo: false } }) do |f| %>
  <div class="form__inputs">
    <%= f.input :login, autofocus: true, autocomplete: "off", placeholder: 'Login...' %>
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: 'email',
                input_html: { autocomplete: "email" },
                placeholder: "Or email.."%>
    <%= f.input :password,
                required: false,
                label: 'password',
                input_html: { autocomplete: "current-password" },
                placeholder: "Password.."%>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions btn--primary-fixed">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
